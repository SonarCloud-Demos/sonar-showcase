<?xml version="1.0" encoding="UTF-8"?>
<!--
    Maven Security Settings
    Prevents dependency confusion attacks and ensures only trusted repositories are used
    
    VULNERABILITY: SNYK-JS-MAVENCOMPILERPLUGIN-3091064
    Malicious npm package 'maven-compiler-plugin' is a dependency confusion attack.
    This settings.xml ensures Maven only uses trusted repositories and verifies checksums.
-->
<settings xmlns="http://maven.apache.org/SETTINGS/1.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0 
          https://maven.apache.org/xsd/settings-1.2.0.xsd">
    
    <!-- Security: Require checksum verification -->
    <checksumPolicy>fail</checksumPolicy>
    
    <!-- Security: Only use trusted repositories -->
    <mirrors>
        <!-- Primary mirror: Maven Central (official) -->
        <mirror>
            <id>central-mirror</id>
            <name>Maven Central Repository</name>
            <url>https://repo1.maven.org/maven2</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
        
        <!-- Block all other repositories by default -->
        <!-- This prevents accidental use of untrusted repositories -->
        <mirror>
            <id>block-external</id>
            <name>Block External Repositories</name>
            <url>https://repo1.maven.org/maven2</url>
            <mirrorOf>external:*,!central</mirrorOf>
            <blocked>true</blocked>
        </mirror>
    </mirrors>
    
    <!-- Security: Repository configuration -->
    <profiles>
        <profile>
            <id>secure-repositories</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <name>Maven Central Repository</name>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <checksumPolicy>fail</checksumPolicy>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <checksumPolicy>fail</checksumPolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <name>Maven Central Repository</name>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <checksumPolicy>fail</checksumPolicy>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <checksumPolicy>fail</checksumPolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    
    <!-- Activate secure profile by default -->
    <activeProfiles>
        <activeProfile>secure-repositories</activeProfile>
    </activeProfiles>
    
    <!-- Security: Prevent execution of untrusted code -->
    <interactiveMode>false</interactiveMode>
    
    <!-- Security: Use secure transport (HTTPS only) -->
    <servers>
        <!-- Example: If you need to add authenticated repositories, do it here -->
        <!-- Always use HTTPS and verify certificates -->
    </servers>
    
</settings>
